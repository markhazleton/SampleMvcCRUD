@model UISampleSpark.Core.Models.EmployeeDto
@using UISampleSpark.UI.Helpers

@{
    ViewBag.Title = $"Employee Details - {Model.Name} | ASP.NET MVC CRUD Tutorial";
    ViewBag.MetaDescription = $"View detailed information for employee {Model.Name}. Learn how the Employee Details form fits into the MVC Controller form approach in ASP.NET MVC.";
    ViewBag.MetaKeywords = "ASP.NET MVC, Employee Details, UI patterns tutorial, MVC Forms, employee management, form handling, model binding";
    
    var baseUrl = $"{Context.Request.Scheme}://{Context.Request.Host}";
}

<!-- Employee-specific structured data -->
<script type="application/ld+json">
@Html.Raw(StructuredDataHelper.GenerateEmployeeSchema(Model, baseUrl))
</script>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title text-center">Employee Details for @Model.Name</h2>
            <div class="row mt-4">
                <div class="col-md-6">
                    <img src="~/images/@Model.ProfilePicture" class="rounded img-fluid" alt="@Model.Name's Profile Picture" />
                </div>
                <div class="col-md-6">
                    <h4 class="text-muted">Employee Information</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
                        <li class="list-group-item"><strong>Gender:</strong> @Model.Gender</li>
                        <li class="list-group-item"><strong>Age:</strong> @Model.Age</li>
                        <li class="list-group-item"><strong>State:</strong> @Model.State</li>
                        <li class="list-group-item"><strong>Country:</strong> @Model.Country</li>
                        <li class="list-group-item"><strong>Department:</strong> @Model.Department.ToString()</li>
                    </ul>
                    <div class="mt-3">
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="card-title">About the Employee Details Form</h3>
            <p class="card-text">
                The Employee Details form is a crucial component in the MVC Controller form approach. It allows for viewing, editing, and deleting employee records efficiently, leveraging model binding and form handling capabilities provided by ASP.NET MVC.
                This form showcases how data is retrieved from the model and displayed to the user, making it easy to manage employee information in a structured way.
            </p>
            <p class="card-text">
                By using this structured approach, developers can ensure a clean separation of concerns, improve code maintainability, and provide a better user experience through streamlined data management operations.
            </p>
        </div>
    </div>
</div>
