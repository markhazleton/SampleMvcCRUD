# C# files
[*.cs]

#### .NET Coding Conventions ####

# Organize usings
dotnet_separate_import_directive_groups = false
dotnet_sort_system_directives_first = true
file_header_template = unset

#### Code Analysis Rules ####

# CA1707: Identifiers should not contain underscores (suppress for test methods)
dotnet_diagnostic.CA1707.severity = none

# CA2007: Do not directly await a Task (suggestion level)
dotnet_diagnostic.CA2007.severity = suggestion

# CA1062: Validate arguments of public methods
dotnet_diagnostic.CA1062.severity = warning

# CA1031: Do not catch general exception types
dotnet_diagnostic.CA1031.severity = suggestion

# CA1305: Specify IFormatProvider
dotnet_diagnostic.CA1305.severity = suggestion

# CA1002: Do not expose generic lists
dotnet_diagnostic.CA1002.severity = suggestion

# CA1515: Make internal types public or private
dotnet_diagnostic.CA1515.severity = suggestion

# CA1054: URI parameters should not be strings
dotnet_diagnostic.CA1054.severity = suggestion

# CA1303: Do not pass literals as localized parameters
dotnet_diagnostic.CA1303.severity = none

# CA1508: Avoid dead conditional code
dotnet_diagnostic.CA1508.severity = suggestion

# CA1851: Possible multiple enumerations
dotnet_diagnostic.CA1851.severity = suggestion

# CA1725: Parameter names should match base declaration
dotnet_diagnostic.CA1725.severity = suggestion

# CA1852: Type can be sealed
dotnet_diagnostic.CA1852.severity = suggestion

# CA1822: Member does not access instance data
dotnet_diagnostic.CA1822.severity = suggestion

# CA1864: Prefer TryAdd over Add with ContainsKey
dotnet_diagnostic.CA1864.severity = warning

# IL2026: Trim warnings
dotnet_diagnostic.IL2026.severity = suggestion

# IL2075: DynamicallyAccessedMembers warnings
dotnet_diagnostic.IL2075.severity = suggestion

# Security rules
dotnet_diagnostic.CA5391.severity = warning
dotnet_diagnostic.CA5395.severity = warning
dotnet_diagnostic.CA3003.severity = warning
dotnet_diagnostic.CA5394.severity = suggestion

# Nullable reference warnings
dotnet_diagnostic.CS8600.severity = suggestion
dotnet_diagnostic.CS8601.severity = suggestion
dotnet_diagnostic.CS8602.severity = suggestion
dotnet_diagnostic.CS8603.severity = suggestion
dotnet_diagnostic.CS8604.severity = suggestion
dotnet_diagnostic.CS8618.severity = suggestion
dotnet_diagnostic.CS8625.severity = suggestion
dotnet_diagnostic.CS8767.severity = suggestion

# MSTest warnings - suppress for test projects
dotnet_diagnostic.MSTEST0017.severity = none
dotnet_diagnostic.MSTEST0037.severity = none
dotnet_diagnostic.MSTEST0032.severity = none

# IDE formatting rules
dotnet_diagnostic.IDE0011.severity = suggestion
dotnet_diagnostic.IDE2000.severity = suggestion
dotnet_diagnostic.IDE2001.severity = suggestion
dotnet_diagnostic.IDE2003.severity = suggestion
dotnet_diagnostic.IDE0161.severity = suggestion

# ASP.NET warnings
dotnet_diagnostic.ASP0000.severity = warning

# This member access
dotnet_style_qualification_for_event = false:silent
dotnet_style_qualification_for_field = false:silent
dotnet_style_qualification_for_method = false:silent
dotnet_style_qualification_for_property = false:silent

# CA1869: Cache and reuse 'JsonSerializerOptions' instances
dotnet_diagnostic.CA1869.severity = suggestion

# CA1711: Identifiers should not have incorrect suffix
dotnet_diagnostic.CA1711.severity = suggestion

# CA1848: Use the LoggerMessage delegates
dotnet_diagnostic.CA1848.severity = suggestion

# CA1307: Specify StringComparison
dotnet_diagnostic.CA1307.severity = suggestion

# SYSLIB0050: Obsolete types
dotnet_diagnostic.SYSLIB0050.severity = suggestion

# CS0219: Variable is assigned but its value is never used
dotnet_diagnostic.CS0219.severity = suggestion

# CA2227: Collection properties should be read only
dotnet_diagnostic.CA2227.severity = suggestion

# CA1304: Specify CultureInfo
dotnet_diagnostic.CA1304.severity = suggestion

# CA1308: Normalize strings to uppercase
dotnet_diagnostic.CA1308.severity = suggestion

# CA1310: Specify StringComparison for correctness
dotnet_diagnostic.CA1310.severity = suggestion

# CA1311: Specify culture or use invariant version
dotnet_diagnostic.CA1311.severity = suggestion

# CA1849: Call async methods when in an async method
dotnet_diagnostic.CA1849.severity = suggestion

# CA2263: Prefer generic overload when type is known
dotnet_diagnostic.CA2263.severity = suggestion

# CA1056: URI properties should not be strings
dotnet_diagnostic.CA1056.severity = suggestion

# CA1032: Implement standard exception constructors
dotnet_diagnostic.CA1032.severity = suggestion

# CA1034: Nested types should not be visible
dotnet_diagnostic.CA1034.severity = suggestion

# CA1859: Use concrete types when possible for improved performance
dotnet_diagnostic.CA1859.severity = suggestion

# CA2213: Disposable fields should be disposed
dotnet_diagnostic.CA2213.severity = warning

# CA2234: Pass System.Uri objects instead of strings
dotnet_diagnostic.CA2234.severity = suggestion

# CA1819: Properties should not return arrays
dotnet_diagnostic.CA1819.severity = suggestion

# CA1805: Do not initialize unnecessarily
dotnet_diagnostic.CA1805.severity = suggestion

# CA1012: Abstract types should not have constructors
dotnet_diagnostic.CA1012.severity = suggestion

# CA1051: Do not declare visible instance fields
dotnet_diagnostic.CA1051.severity = suggestion

# CS0618: Type or member is obsolete
dotnet_diagnostic.CS0618.severity = warning

# CS8613: Nullability of reference types doesn't match
dotnet_diagnostic.CS8613.severity = suggestion

# CS8614: Nullability of reference types doesn't match
dotnet_diagnostic.CS8614.severity = suggestion

# CS8629: Nullable value type may be null
dotnet_diagnostic.CS8629.severity = suggestion

# CS8766: Nullability of reference types in return type doesn't match
dotnet_diagnostic.CS8766.severity = suggestion

# MSTEST0001: Test class should have test method
dotnet_diagnostic.MSTEST0001.severity = suggestion
